  <title>Sky Blue Calculator</title>
  <style>
    body {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      background-color: black;
      margin: 0;
      font-family: Arial, sans-serif;
    }

    .calculator {
      background: #0d1b2a;
      padding: 20px;
      border-radius: 20px;
      box-shadow: 0px 0px 20px skyblue;
    }

    .display {
      width: 100%;
      height: 60px;
      background: #000;
      color: skyblue;
      font-size: 2rem;
      border: none;
      border-radius: 10px;
      margin-bottom: 20px;
      padding: 10px;
      text-align: right;
    }

    .buttons {
      display: grid;
      grid-template-columns: repeat(4, 70px);
      grid-gap: 15px;
    }

    button {
      height: 60px;
      border: none;
      border-radius: 15px;
      font-size: 1.2rem;
      font-weight: bold;
      cursor: pointer;
      background-color: skyblue;
      color: black;
      transition: 0.2s;
    }

    button:hover {
      background-color: #00aaff;
      box-shadow: 0 0 10px skyblue;
    }

    .operator {
      background-color: #0077b6;
      color: white;
    }

    .operator:hover {
      background-color: #00b4d8;
    }

    .equals {
      grid-column: span 2;
      background-color: #0096c7;
      color: white;
    }

    .equals:hover {
      background-color: #00b4d8;
    }
  </style>
